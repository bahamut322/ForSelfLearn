<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomAlarmTextView">
        <attr name="bottom_alarm_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomSwitchTextView">
        <attr name="view_background" format="reference"/>
        <attr name="left_select_background" format="reference"/>
        <attr name="right_select_background" format="reference"/>
        <attr name="left_text" format="string"/>
        <attr name="right_text" format="string"/>
        <attr name="default_text_color" format="reference"/>
        <attr name="select_text_color" format="reference"/>
        <attr name="view_selected" format="boolean"/>
        <attr name="view_text_size" format="float"/>
    </declare-styleable>

    <declare-styleable name="NoDataView">
        <attr name="center_icon" format="reference"/>
        <attr name="center_icon_width" format="float"/>
        <attr name="center_icon_height" format="float"/>
        <attr name="center_message" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomIndicatorTextView">
        <attr name="text_size" format="float"/>
    </declare-styleable>

    <declare-styleable name="CustomKeyBoardView">
        <attr name="keyboard_type"/>
    </declare-styleable>

    <attr name="keyboard_type">
        <enum name="clear_remove" value="0" />
        <enum name="remove_confirm" value="1" />
    </attr>

    <declare-styleable name="VerticalTextView">
        <attr name="text" format="string|reference"/>
        <attr name="textColor" format="color|reference"/>
        <attr name="textSize" format="dimension|reference"/>
        <attr name="rowSpacing" format="dimension|reference"/>
        <attr name="columnSpacing" format="dimension|reference"/>
        <attr name="columnLength" format="integer"/>
        <attr name="maxColumns" format="integer"/>
        <attr name="atMostHeight" format="boolean"/>
        <attr name="isCharCenter" format="boolean"/>
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>

    <!-- 自定义验证码-->
    <declare-styleable name="VerificationCodeView">
        <!--输入框的数量-->
        <attr name="vcv_code_number" format="integer" />
        <!--单个验证码的宽度-->
        <attr name="vcv_code_width" format="dimension|reference" />
        <!--输入框文字颜色-->
        <attr name="vcv_code_color" format="color|reference" />
        <!--输入框文字大小-->
        <attr name="vcv_code_size" format="dimension|reference" />
        <!--输入框获取焦点时边框-->
        <attr name="vcv_code_bg_focus" format="reference" />
        <!--输入框没有焦点时边框-->
        <attr name="vcv_code_bg_normal" format="reference" />
        <!--是否展示密码样式-->
        <attr name="vcv_code_input_style" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MyImageView">
        <attr name="auto_play" format="boolean">

        </attr>
    </declare-styleable>

</resources>