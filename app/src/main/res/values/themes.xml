<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="simpleDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Holo.Dialog">

        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowFrame">@android:color/transparent</item><!-- 边框 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->

    </style>

    <style name="style_btn_common" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:paddingLeft">@dimen/dp_25</item>
        <item name="android:paddingRight">@dimen/dp_25</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@drawable/selector_btn_item_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_btn_common</item>
    </style>

    <style name="ProgressBar_Scale" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/layer_list_progress_bar_download</item>
    </style>

    <style name="Theme.QMUIDemo" parent="QMUI.Compat.NoActionBar"/>

    <!--自定义seekbarstyle-->
    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">20dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/transparency</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:thumb">@drawable/shape_seekbar_thumb_2</item>
    </style>

</resources>