<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/state1"
        motion:constraintSetEnd="@+id/state2"
        motion:duration="1000">
    </Transition>

    <ConstraintSet android:id="@+id/state1">
        <Constraint
            android:id="@+id/bottomAlarmTextViewArrive"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            motion:layout_constraintBottom_toBottomOf="@+id/imgArrive"
            motion:layout_constraintTop_toTopOf="@+id/imgArrive"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteX="0dp"
            motion:layout_editor_absoluteY="0dp">
            <CustomAttribute
                motion:attributeName="translationY"
                motion:customFloatValue="1000" />
        </Constraint>
        <Constraint
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="match_parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/lin" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/state2">
        <Constraint
            android:id="@+id/bottomAlarmTextViewArrive"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="translationY"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>
</MotionScene>