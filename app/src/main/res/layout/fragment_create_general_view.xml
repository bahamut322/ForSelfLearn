<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCreateGeneralView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/col_create_general_view_bg"
        android:orientation="vertical"
        tools:context=".view.fragment.DebuggingFragment">

        <TextView
            android:id="@+id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            android:padding="@dimen/dp_14"
            android:text="@string/back"
            android:textColor="@color/col_room_dark_table_item_text_unsel"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/right_step"
            app:layout_constraintBottom_toBottomOf="@+id/tv_return"
            app:layout_constraintStart_toEndOf="@+id/tv_return"
            app:layout_constraintTop_toTopOf="@+id/tv_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_42"
            android:gravity="center"
            android:minWidth="@dimen/dp_95"
            android:text="@string/str_general_view_title"
            android:textColor="@color/col_room_dark_table_item_text_unsel"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_return"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_return" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.30" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <TextView
            android:id="@+id/tv_step_one"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/ic_switch_thumb_checked"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:text="1"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_return" />

        <TextView
            android:id="@+id/tv_step_one_success"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/success"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_return" />

        <TextView
            android:id="@+id/tv_step_one_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:text="选择绑定的激光图"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_one"
            app:layout_constraintLeft_toRightOf="@+id/tv_step_one"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one" />

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@color/col_tab_menu_line_sel_end"
            android:clipChildren="false"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_step_one" />

        <View
            android:id="@+id/view_step_1"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_4"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/tv_step_one"
            app:layout_constraintTop_toTopOf="@+id/ll_line" />

        <View
            android:id="@+id/view_step_2"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_4"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@+id/tv_step_two"
            app:layout_constraintTop_toTopOf="@+id/ll_line" />

        <View
            android:id="@+id/view_step_3"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_4"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@+id/tv_step_three"
            app:layout_constraintTop_toTopOf="@+id/ll_line" />


        <View
            android:id="@+id/view_step_4"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_4"
            android:background="@color/white"
            android:clipChildren="false"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@+id/tv_step_four"
            app:layout_constraintTop_toTopOf="@+id/ll_line" />

        <TextView
            android:id="@+id/tv_step_two"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_bg_circle"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:text="2"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_one"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@+id/guideline1"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one" />

        <TextView
            android:id="@+id/tv_step_two_success"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:background="@drawable/success"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_one"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@+id/guideline1"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one" />

        <TextView
            android:id="@+id/tv_step_two_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:text="选择绑定的路径图"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_two"
            app:layout_constraintLeft_toRightOf="@+id/tv_step_two"
            app:layout_constraintTop_toTopOf="@+id/tv_step_two" />

        <TextView
            android:id="@+id/tv_step_three"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_bg_circle"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:text="3"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_one"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one" />

        <TextView
            android:id="@+id/tv_step_three_success"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:background="@drawable/success"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_one"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one" />

        <TextView
            android:id="@+id/tv_step_three_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:text="选择绑定的目标点"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_three"
            app:layout_constraintLeft_toRightOf="@+id/tv_step_three"
            app:layout_constraintTop_toTopOf="@+id/tv_step_three" />

        <TextView
            android:id="@+id/tv_step_four"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_bg_circle"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:text="4"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_one"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one" />

        <TextView
            android:id="@+id/tv_step_four_success"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:background="@drawable/success"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_one"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one" />

        <TextView
            android:id="@+id/tv_step_four_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:minWidth="@dimen/dp_10"
            android:text="确认文件"
            android:textColor="@drawable/selector_text_color"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_four"
            app:layout_constraintLeft_toRightOf="@+id/tv_step_four"
            app:layout_constraintTop_toTopOf="@+id/tv_step_four" />

        <RelativeLayout
            android:id="@+id/rl_check_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@+id/ll_line">

            <CheckBox
                android:id="@+id/cb_check_all"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:background="@drawable/checkbox"
                android:button="@null"
                android:minWidth="@dimen/dp_10"
                android:padding="@dimen/dp_20"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_check_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/cb_check_all"
                android:gravity="center"
                android:minWidth="@dimen/dp_10"
                android:text="全选"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_30"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_seleced_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_toRightOf="@+id/tv_check_all"
                android:gravity="center"
                android:minWidth="@dimen/dp_10"
                android:text="已选:"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_30"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_file_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:minWidth="@dimen/dp_10"
                android:text="@string/str_file_name"
                android:textColor="@color/color_A0BAEF"
                android:textSize="@dimen/sp_30"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edt_general_view_name"
                android:layout_width="@dimen/dp_400"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_toRightOf="@+id/tv_file_name_title"
                android:background="@drawable/selector_edt_general_bg"
                android:gravity="center"
                android:hint="@string/str_input_map_name"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/color_4D6FBE"
                android:textColorHint="@color/color_4D6FBE"
                android:textSize="@dimen/sp_24"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rcv_laser_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintBottom_toTopOf="@+id/tv_next"
            app:layout_constraintTop_toBottomOf="@+id/rl_check_all">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_laser_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_sel_route_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_sel_target_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_0E40A4"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_sel_verify_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_0E40A4"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_last_step"
            android:layout_width="240dp"
            android:layout_height="72dp"
            android:layout_marginRight="@dimen/dp_33"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/step_bg"
            android:gravity="center"
            android:text="@string/str_last_step"
            android:textColor="@color/white"
            android:textSize="@dimen/mid_small_small_text_size"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_next" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="240dp"
            android:layout_height="72dp"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/step_bg"
            android:gravity="center"
            android:text="@string/str_next"
            android:textColor="@color/white"
            android:visibility="visible"
            android:textSize="@dimen/mid_small_small_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="240dp"
            android:layout_height="72dp"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/selector_bg_button"
            android:gravity="center"
            android:text="@string/str_complete_binding"
            android:textColor="@color/white"
            android:textSize="@dimen/mid_small_small_text_size"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/right_step"
            app:layout_constraintLeft_toRightOf="@+id/tv_step_one_text"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one_text" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/right_step"
            app:layout_constraintLeft_toRightOf="@+id/tv_step_two_text"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one_text" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/right_step"
            app:layout_constraintLeft_toRightOf="@+id/tv_step_three_text"
            app:layout_constraintTop_toTopOf="@+id/tv_step_one_text" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_empty"
            android:layout_width="0dp"
            android:layout_height="420dp"
            android:layout_marginTop="@dimen/dp_208"
            android:layout_marginBottom="@dimen/dp_144"
            android:background="@drawable/selector_edt_general_bg"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/rcv_laser_item"
            app:layout_constraintRight_toRightOf="@+id/rcv_laser_item"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_general_empty"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_155"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_marginBottom="@dimen/dp_192"
                android:src="@drawable/ic_nothing_general"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_general_empty"
                android:layout_width="@dimen/dp_258"
                android:layout_height="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_28"
                android:gravity="center"
                android:text="暂无激光图，请先创建..."
                android:textColor="@color/color_A0BAEF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/image_general_empty"
                app:layout_constraintStart_toStartOf="@+id/image_general_empty"
                app:layout_constraintTop_toBottomOf="@+id/image_general_empty" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_general_new"
            android:layout_width="240dp"
            android:layout_height="72dp"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/selector_btn_common"
            android:gravity="center"
            android:text="@string/create_laser_map"
            android:textColor="@color/white"
            android:textSize="@dimen/mid_small_small_text_size"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>