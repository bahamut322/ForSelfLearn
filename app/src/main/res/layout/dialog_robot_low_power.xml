<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view19"
        android:layout_width="540dp"
        android:layout_height="500dp"
        android:background="@drawable/shape_gradient_1a4fba_0e40a4_corners_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="174dp"
        android:layout_height="188dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_robot_exception_4"
        android:contentDescription="@string/image_description"
        app:layout_constraintBottom_toTopOf="@+id/textView73"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintStart_toStartOf="@+id/view19" />

    <TextView
        android:id="@+id/textView73"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:includeFontPadding="false"
        android:text="@string/low_power"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36"
        android:alpha="0.8"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintStart_toStartOf="@+id/view19"
        app:layout_constraintTop_toTopOf="@+id/view19" />

    <View
        android:id="@+id/view18"
        android:layout_width="640dp"
        android:layout_height="2dp"
        android:background="@color/color_4D6FBE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline168"
        app:layout_constraintTop_toTopOf="@+id/guideline169"
        app:layout_constraintVertical_bias="0.0" />
    <View
        android:id="@+id/view29"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDate"
        app:layout_constraintEnd_toStartOf="@+id/textViewDate"
        app:layout_constraintTop_toTopOf="@+id/textViewDate" />

    <View
        android:id="@+id/view30"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDate"
        app:layout_constraintStart_toEndOf="@+id/textViewDate"
        app:layout_constraintTop_toTopOf="@+id/textViewDate" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        android:alpha="0.4"
        app:layout_constraintEnd_toEndOf="@+id/textView73"
        app:layout_constraintStart_toStartOf="@+id/textView73"
        app:layout_constraintTop_toBottomOf="@+id/textView73"
        tools:text="2021-03-23 18:14" />

    <TextView
        android:id="@+id/textView74"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:alpha="0.8"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="14sp"
        android:text="@string/please_let_me_return"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_28"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/view19"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/color_00EEFF"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/view19"
        app:layout_constraintEnd_toEndOf="@+id/textView74"
        app:layout_constraintStart_toStartOf="@+id/textView74"
        app:layout_constraintTop_toBottomOf="@+id/textViewBackToCharge"
        tools:text="错误编码：0347886124" />

    <TextView
        android:id="@+id/textViewBackToCharge"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="32dp"
        android:background="@drawable/selector_bg_button"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_30"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintStart_toStartOf="@+id/view19"
        app:layout_constraintTop_toBottomOf="@+id/textView74"
        tools:text="前往充电（10s）" />

</androidx.constraintlayout.widget.ConstraintLayout>