<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="#00000000"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view13"
        android:layout_width="@dimen/dp_640"
        android:layout_height="@dimen/dp_328"
        android:background="@drawable/setting_item_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/view13"
        app:layout_constraintTop_toTopOf="@+id/view13" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:src="@drawable/cancel_bg_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@drawable/cancel_iv"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_19"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_96"
        android:alpha="0.6"
        android:text="@string/exit_camera_tips"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_32"
        app:layout_constraintEnd_toEndOf="@+id/view13"
        app:layout_constraintStart_toStartOf="@+id/view13"
        app:layout_constraintTop_toTopOf="@+id/view13" />

    <Button
        android:id="@+id/Yes_Exit"
        android:layout_width="@dimen/dp_204"
        android:layout_height="@dimen/dp_72"
        android:background="@drawable/dialog_btn_true_bg"
        android:elevation="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_100"
        android:text="@string/yes_one"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_32"
        android:layout_marginTop="@dimen/dp_80"

        app:layout_constraintStart_toStartOf="@+id/view13"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/No_Exit"
        android:layout_width="@dimen/dp_204"
        android:layout_height="@dimen/dp_72"
        android:background="@drawable/dialog_btn_false_bg"
        android:elevation="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginEnd="@dimen/dp_100"
        android:text="@string/no_thanks"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_32"
        app:layout_constraintEnd_toEndOf="@+id/view13"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

</androidx.constraintlayout.widget.ConstraintLayout>