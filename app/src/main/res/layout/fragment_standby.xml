<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">


        <com.sendi.deliveredrobot.view.widget.AdvanceView
            android:id="@+id/Standby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />

        <SurfaceView
            android:id="@+id/SurfaceView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@+id/Standby"
            app:layout_constraintTop_toTopOf="@+id/Standby"/>

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/Standby"
            app:layout_constraintEnd_toEndOf="@+id/Standby"
            app:layout_constraintStart_toStartOf="@+id/Standby"
            app:layout_constraintTop_toTopOf="@+id/Standby" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>