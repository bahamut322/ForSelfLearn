<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.sendi.deliveredrobot.model.ExplantionNameModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.StartExplantionFragment">



        <ImageView
            android:id="@+id/startImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_img_halo"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentCon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="-16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pointList"
                android:layout_width="@dimen/dp_160"
                android:layout_height="553dp"
                android:background="@drawable/bg_start_explanation_item"
                android:divider="@null"
                app:layout_constraintBottom_toBottomOf="@+id/parentCon"
                app:layout_constraintStart_toStartOf="@+id/parentCon"
                app:layout_constraintTop_toTopOf="@+id/parentCon" />

            <LinearLayout
                android:id="@+id/nameLin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_60"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/contentCL"
                app:layout_constraintStart_toStartOf="@+id/contentCL"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/statusTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="当前讲解:"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/nowExplanation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{data.name}"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentCL"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_59"
                android:layout_height="@dimen/dp_600"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pointList"
                app:layout_constraintTop_toBottomOf="@+id/nameLin">

                <View
                    android:id="@+id/view26"
                    android:layout_width="@dimen/dp_1010"
                    android:layout_height="480dp"
                    android:background="@drawable/bg_explanation_acceptstation"
                    app:layout_constraintEnd_toEndOf="@+id/contentCL"
                    app:layout_constraintStart_toStartOf="@+id/contentCL"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--显示图片-->
                <ImageView
                    android:id="@+id/pointImage"
                    android:layout_width="0dp"
                    android:layout_height="414dp"
                    android:layout_marginStart="@dimen/dp_32"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="@dimen/dp_32"
                    app:layout_constraintBottom_toBottomOf="@+id/view26"
                    app:layout_constraintEnd_toStartOf="@+id/contentLin"
                    app:layout_constraintStart_toStartOf="@+id/view26"
                    app:layout_constraintTop_toTopOf="@+id/view26" />

                <LinearLayout
                    android:id="@+id/contentLin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/view26"
                    app:layout_constraintEnd_toEndOf="@+id/view26"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/pointName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp_32"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_32"
                        app:layout_constraintBottom_toTopOf="@+id/view2"
                        app:layout_constraintStart_toStartOf="@+id/view2" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="368dp"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginBottom="@dimen/dp_24"
                        android:alpha="0.7"
                        android:background="@color/white"
                        app:layout_constraintBottom_toTopOf="@+id/acceptstationTv"
                        app:layout_constraintEnd_toEndOf="@+id/acceptstationTv"
                        app:layout_constraintStart_toStartOf="@+id/acceptstationTv" />


                    <com.sendi.deliveredrobot.view.widget.SongLyricTextView
                        android:id="@+id/acceptstationTv"
                        android:layout_width="368dp"
                        android:layout_height="@dimen/dp_325"
                        android:layout_marginEnd="@dimen/dp_26"
                        android:layout_marginBottom="@dimen/dp_37"
                        android:alpha="0.6"
                        android:letterSpacing="0.2"
                        android:lineSpacingMultiplier="1.0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_24"
                        app:layout_constraintBottom_toBottomOf="@+id/view26"
                        app:layout_constraintEnd_toEndOf="@+id/view26"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <Button
                    android:id="@+id/finishBtn"
                    android:layout_width="@dimen/dp_204"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:text="结束讲解"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ChangingOver"
                    app:layout_constraintEnd_toStartOf="@+id/ChangingOver"
                    app:layout_constraintTop_toTopOf="@+id/ChangingOver" />

                <Button
                    android:id="@+id/ChangingOver"
                    android:layout_width="@dimen/dp_204"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:text="切换其他点"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:layout_constraintBottom_toBottomOf="@+id/nextTaskBtn"
                    app:layout_constraintEnd_toStartOf="@+id/nextTaskBtn"
                    app:layout_constraintTop_toTopOf="@+id/nextTaskBtn" />

                <Button
                    android:id="@+id/nextTaskBtn"
                    android:layout_width="@dimen/dp_204"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginTop="@dimen/dp_48"
                    android:background="@drawable/dialog_btn_true_bg"
                    android:gravity="center"
                    android:text="下一个点"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:layout_constraintEnd_toEndOf="@+id/view26"
                    app:layout_constraintTop_toBottomOf="@+id/view26" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>