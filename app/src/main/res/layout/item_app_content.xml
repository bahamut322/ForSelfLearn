<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_10">
        <ImageView
            android:id="@+id/image_view_applet"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_240"
            android:gravity="center"
            android:foreground="@drawable/selector_item_applet"
            android:contentDescription="@string/image_description"
            tools:src="@drawable/ic_head_robot"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_view_applet"
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_28"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:maxLines="2"
        android:stateListAnimator="@animator/text_size"
        android:textColor="@color/selector_item_applet_text"
        tools:text="汤姆猫毛汤姆猫毛汤姆猫毛汤姆猫毛汤姆猫毛"/>
</androidx.appcompat.widget.LinearLayoutCompat>