<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeClay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg">

        <include
            android:id="@+id/include"
            layout="@layout/home_page"
            android:layout_width="match_parent"
            android:layout_height="462dp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="@dimen/dp_104"
            android:layout_marginEnd="@dimen/dp_104"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView59" />

        <ImageView
            android:id="@+id/imageViewSetting"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_57"
            android:src="@drawable/setting_svg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_32"
            android:src="@drawable/timeoclick_svg"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewSetting"
            app:layout_constraintStart_toEndOf="@+id/imageViewSetting"
            app:layout_constraintTop_toTopOf="@+id/imageViewSetting" />

        <TextView
            android:id="@+id/textView59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_140"
            android:alpha="0.9"
            android:text="@string/Welcome_used"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_46"
            android:layout_marginEnd="@dimen/dp_102"
            android:alpha="0.9"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_12"
            android:alpha="0.6"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            app:layout_constraintStart_toEndOf="@+id/textViewClock"
            app:layout_constraintTop_toTopOf="@+id/textViewClock" />

        <TextView
            android:id="@+id/textViewDayOfMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:alpha="0.6"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            app:layout_constraintStart_toStartOf="@+id/textViewDayOfWeek"
            app:layout_constraintTop_toBottomOf="@+id/textViewDayOfWeek" />
        <SurfaceView
            android:id="@+id/SurfaceView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@+id/microphone"
            app:layout_constraintTop_toTopOf="@+id/microphone" />
        <ImageView
            android:id="@+id/microphone"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_48"
            android:layout_marginBottom="@dimen/dp_28"
            android:src="@drawable/horn_svg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bubbleTv"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_14"
            android:alpha="0.6"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:text="@string/ask"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toBottomOf="@+id/microphone"
            app:layout_constraintStart_toEndOf="@+id/microphone" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_7"
            android:src="@drawable/rt_horn"
            app:layout_constraintBottom_toBottomOf="@+id/bubbleTv"
            app:layout_constraintEnd_toStartOf="@+id/bubbleTv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>