<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_64"
    android:background="@color/color_0E40A4"
    >

    <TextView
        android:id="@+id/tv_sub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/color_A0BAEF"
        android:text="子数据"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_66"
        android:layout_toLeftOf="@+id/iv_selected"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_selected"
        />

<!--    color_4D6FBE-->
    <View
        android:id="@+id/view_route_underline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_4D6FBE"
        android:padding="5dp"
        android:text="子数据"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_66"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>