                        android:layout_marginEnd="@dimen/margin_end_setting_item"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text_size"
                        tools:text="90s"
                        android:layout_gravity="center_vertical|end" />
                </FrameLayout>
