                        android:layout_gravity="center_vertical" />

                    <SeekBar
                        android:id="@+id/seekBarPutObjectDurationSetting"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="239dp"
                        android:max="270"
                        android:maxHeight="12dp"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:progressDrawable="@drawable/shape_gradient_4eecfd_to_226de8"
                        android:splitTrack="false"
                        android:thumb="@drawable/shape_seekbar_thumb"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/textViewPutObjectDurationSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_end_setting_item"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text_size"
                        tools:text="90s"
                        android:layout_gravity="center_vertical|end"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="1007.8dp"
                    android:layout_height="120dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_start_setting_item"
                        android:text="@string/wait_take_object_duration"
                        android:textSize="@dimen/small_small_text_size"
                        android:textColor="@color/color_A0BAEF"
                        android:includeFontPadding="false"
                        android:layout_gravity="center_vertical" />

                    <SeekBar
                        android:id="@+id/seekBarWaitTakeObjectDurationSetting"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="239dp"
