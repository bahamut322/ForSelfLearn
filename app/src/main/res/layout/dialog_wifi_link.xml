<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlayout_input"
        android:layout_width="@dimen/dp_720"
        android:layout_height="@dimen/dp_358"
        android:layout_centerInParent="true"
        android:background="@drawable/setting_item_bg"
        android:elevation="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_connect_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_67"
            android:layout_marginRight="@dimen/dp_30"
            android:maxWidth="@dimen/dp_422"
            android:text="连接WiFi网络“Sendi-wifi”需要输入密码："
            android:textColor="@color/white"
            android:textSize="@dimen/sp_19" />

        <LinearLayout
            android:id="@+id/llayout_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_connect_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_39"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <!--            <TextView-->
            <!--                android:id="@+id/tv_tag"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_marginRight="@dimen/dp_20"-->
            <!--                android:text="@string/str_pwd"-->
            <!--                android:textColor="@color/col_text_label"-->
            <!--                android:textSize="@dimen/sp_19" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_edt_bg"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_pwd"
                    android:layout_width="560dp"
                    android:layout_height="@dimen/dp_72"
                    android:background="@null"
                    android:hint="@string/str_input_pwd"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="@dimen/dp_17"
                    android:singleLine="true"
                    android:textColor="@color/col_text_input"
                    android:textColorHint="@color/col_text_hint"
                    android:textSize="@dimen/sp_18" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_fail_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llayout_input"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_7"
            android:text=""
            android:textColor="@color/col_edt_tip"
            android:textSize="@dimen/sp_32"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_72"
            android:layout_below="@id/llayout_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_48"
            android:background="@drawable/dialog_btn_true_bg"
            android:padding="@dimen/dp_10"
            android:text="连接"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imgv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:src="@drawable/cancel_bg_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:src="@drawable/cancel_iv"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_19"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>



</RelativeLayout>