<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/CLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/select_item_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivGuideRound"
            android:layout_width="@dimen/dp_248"
            android:layout_height="@dimen/dp_160"
            android:scaleType="fitXY"
            android:visibility="gone"
            tools:visibility="gone"/>
        <TextView
            android:id="@+id/tv_point_name"
            android:background="@drawable/shape_gradient_ff1da8fe_ff266edc_corners_12dp"
            android:layout_width="@dimen/dp_248"
            android:layout_height="@dimen/dp_160"
            android:visibility="gone"
            android:textColor="@color/color_E5FFFFFF"
            android:gravity="center"
            tools:visibility="visible"
            tools:text="1234"
            tools:textSize="64sp"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/dp_248"
            android:layout_height="48dp"
            android:background="@drawable/guide_select_tv_bg"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@drawable/text_select_bg"
            android:textSize="@dimen/sp_28" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>