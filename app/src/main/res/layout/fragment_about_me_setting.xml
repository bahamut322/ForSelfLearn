<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="version"
            type="String" />
        <variable
            name="SerialNumber"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sl_basic_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_30"
            android:elevation="@dimen/dp_3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sp_32"
                    android:layout_marginTop="@dimen/dp_41"
                    android:text="@string/About_robot"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view3"
                    android:layout_marginTop="@dimen/sp_24"
                    android:layout_width="@dimen/dp_1010"
                    android:layout_height="528dp"
                    android:background="@drawable/setting_item_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView40" />

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_28"
                    android:alpha="0.6"
                    android:text="@string/robot_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintStart_toStartOf="@+id/view3"
                    app:layout_constraintTop_toTopOf="@+id/view3" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:alpha="0.6"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintBottom_toBottomOf="@+id/textView41"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintTop_toTopOf="@+id/textView41" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_63"
                    android:alpha="0.6"
                    android:text="@string/serial"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintStart_toStartOf="@+id/textView41"
                    app:layout_constraintTop_toBottomOf="@+id/textView41" />

                <TextView
                    android:id="@+id/textViewSerialNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:alpha="0.6"
                    android:text="@{SerialNumber}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintBottom_toBottomOf="@+id/textView42"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintTop_toTopOf="@+id/textView42" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_63"
                    android:alpha="0.6"
                    android:text="@string/model"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintStart_toStartOf="@+id/textView42"
                    app:layout_constraintTop_toBottomOf="@+id/textView42" />

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:alpha="0.6"
                    android:text="@string/model_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintBottom_toBottomOf="@+id/textView44"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintTop_toTopOf="@+id/textView44" />

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_63"
                    android:alpha="0.6"
                    android:text="@string/System_version"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintStart_toStartOf="@+id/textView44"
                    app:layout_constraintTop_toBottomOf="@+id/textView44" />

                <TextView
                    android:id="@+id/textViewRobotVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:alpha="0.6"
                    android:text="@{version}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintBottom_toBottomOf="@+id/textView46"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintTop_toTopOf="@+id/textView46" />

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_63"
                    android:alpha="0.6"
                    android:text="@string/System_Update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintStart_toStartOf="@+id/textView46"
                    app:layout_constraintTop_toBottomOf="@+id/textView46" />

                <ImageView
                    android:layout_marginEnd="@dimen/dp_32"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:src="@drawable/next_iv"
                    app:layout_constraintBottom_toBottomOf="@+id/textView48"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintTop_toTopOf="@+id/textView48" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_41"
                    android:text="@string/Enterprise_information"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="@+id/textView40"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />

                <View
                    android:id="@+id/view12"
                    android:layout_width="@dimen/dp_1010"
                    android:layout_height="@dimen/dp_218"
                    android:layout_marginTop="@dimen/dp_22"
                    android:background="@drawable/setting_item_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView50" />

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_38"
                    android:alpha="0.6"
                    android:text="@string/Manufacturer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintStart_toStartOf="@+id/view12"
                    app:layout_constraintTop_toTopOf="@+id/view12" />

                <TextView
                    android:id="@+id/viewProducer"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:alpha="0.6"
                    android:text="@string/Sendi_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintBottom_toBottomOf="@+id/textView51"
                    app:layout_constraintEnd_toEndOf="@+id/view12"
                    app:layout_constraintTop_toTopOf="@+id/textView51"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView53"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_63"
                    android:alpha="0.6"
                    android:text="@string/diagnosis"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintStart_toStartOf="@+id/textView51"
                    app:layout_constraintTop_toBottomOf="@+id/textView51" />

                <TextView
                    android:layout_width="@dimen/dp_184"
                    android:layout_height="@dimen/dp_64"
                    android:background="@drawable/btn_bg"
                    android:text="@string/Upload_log"
                    android:textSize="@dimen/sp_24"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:textColor="@color/color_00EEFF"
                    app:layout_constraintBottom_toBottomOf="@+id/textView53"
                    app:layout_constraintEnd_toEndOf="@+id/view12"
                    app:layout_constraintTop_toTopOf="@+id/textView53" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>