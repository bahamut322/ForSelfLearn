<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/img_goback"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_126"
        android:text="暂停中"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textView64"
        app:layout_constraintStart_toStartOf="@+id/textView64"
        app:layout_constraintTop_toBottomOf="@+id/textView64">

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_72"
            android:layout_marginTop="@dimen/dp_88"
            android:background="@drawable/dialog_btn_true_bg"
            android:text="继续讲解"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/finishBtn"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_72"
            android:layout_marginStart="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_88"
            android:background="@drawable/dialog_btn_true_bg"
            android:text="结束讲解"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/continueBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_72"
            android:background="@drawable/dialog_btn_true_bg"
            android:text="下一个点"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_32"
            android:layout_marginTop="@dimen/dp_48"
            app:layout_constraintEnd_toEndOf="@+id/continueBtn"
            app:layout_constraintStart_toStartOf="@+id/continueBtn"
            app:layout_constraintTop_toBottomOf="@+id/continueBtn" />

        <Button
            android:id="@+id/otherBtn"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_72"
            android:background="@drawable/dialog_btn_true_bg"
            android:text="切换其他点"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_32"
            android:layout_marginTop="@dimen/dp_48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/finishBtn"
            app:layout_constraintTop_toBottomOf="@+id/finishBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/returnTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min"
        android:textColor="@color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView67"
        app:layout_constraintEnd_toStartOf="@+id/textView67" />

    <TextView
        android:id="@+id/textView67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_64"
        android:layout_marginBottom="@dimen/dp_64"
        android:alpha="0.6"
        android:text="s"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>