<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <View
        android:id="@+id/view19"
        android:layout_width="540dp"
        android:layout_height="@dimen/dp_400"
        android:background="@drawable/shape_gradient_1a4fba_0e40a4_corners_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="0dp"
        android:layout_height="188dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/ic_robot_exception_3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintStart_toStartOf="@+id/view19" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="540dp"
        android:layout_height="164dp"
        android:src="@drawable/robot_exception_2_bg"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintStart_toStartOf="@+id/view19"
        app:layout_constraintTop_toTopOf="@+id/view19" />

    <TextView
        android:id="@+id/textView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alpha="0.8"
        android:includeFontPadding="false"
        android:text="我不能出发啦"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintStart_toStartOf="@+id/view19"
        app:layout_constraintTop_toBottomOf="@+id/imageView15" />

    <View
        android:id="@+id/view29"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDate"
        app:layout_constraintEnd_toStartOf="@+id/textViewDate"
        app:layout_constraintTop_toTopOf="@+id/textViewDate" />

    <View
        android:id="@+id/view31"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDate"
        app:layout_constraintStart_toEndOf="@+id/textViewDate"
        app:layout_constraintTop_toTopOf="@+id/textViewDate" />
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:alpha="0.4"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="@+id/textView71"
        app:layout_constraintStart_toStartOf="@+id/textView71"
        app:layout_constraintTop_toBottomOf="@+id/textView71"
        tools:text="2021-03-23 18:14" />


    <TextView
        android:id="@+id/textView72"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:alpha="0.8"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="14sp"
        android:text="@string/please_pull_out_adapter"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_28"
        app:layout_constraintEnd_toEndOf="@+id/view31"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/view29"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate" />


</androidx.constraintlayout.widget.ConstraintLayout>