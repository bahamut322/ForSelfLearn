<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_16"
        android:background="@color/col_create_general_view_bg"
        />

    <RelativeLayout
        android:id="@+id/rl_route_main_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@drawable/shape_bg_round_top_0e40a4"
        >

        <ImageView
            android:id="@+id/iv_fold_expand"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/ic_fold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_33"
            />

        <TextView
            android:id="@+id/tv_laser_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="激光图:"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:textColor="@color/color_A0BAEF"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv_fold_expand"
            />

        <TextView
            android:id="@+id/tv_laser_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:text="主菜单"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:textColor="@color/color_E2EBFE"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_laser_map_title"
            />


        <TextView
            android:id="@+id/tv_route_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="56dp"
            android:layout_toEndOf="@+id/tv_laser_map"
            android:layout_toRightOf="@+id/iv_fold_expand"
            android:padding="10dp"
            android:text="路径图:"
            android:textColor="@color/color_A0BAEF"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_route_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:text="主菜单"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:textColor="@color/color_E2EBFE"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_route_map_title"
            />

        <View
            android:id="@+id/view_underline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_4D6FBE"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            />
    </RelativeLayout>

</LinearLayout>