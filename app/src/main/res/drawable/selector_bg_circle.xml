<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape
            android:shape="oval">

            <solid
                android:color="@color/create_general_number"/>

            <size
                android:width="50dp"
                android:height="50dp"/>

            <stroke
                android:width="0.1dp"
                android:color="@color/white"
                />
        </shape>

    </item>
    <item android:state_checked="true">
        <shape
            android:shape="oval">

            <solid
                android:color="@color/white"/>
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>

    </item>
</selector>