<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="64dp" android:height="64dp"/>
                    <solid android:color="@color/color_216FE8" />
                </shape>
            </item>
            <item android:width="32dp" android:height="39dp" android:gravity="center" android:drawable="@drawable/ic_rotate_right_pressed" tools:ignore="UnusedAttribute" />
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="64dp" android:height="64dp"/>
                    <solid android:color="@color/color_E2EBFE" />
                </shape>
            </item>
            <item android:width="32dp" android:height="39dp" android:gravity="center" android:drawable="@drawable/ic_rotate_right" tools:ignore="UnusedAttribute" />
        </layer-list>
    </item>
</selector>