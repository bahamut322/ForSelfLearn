<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 设置ProgressBar背景色 -->
<item android:id="@android:id/background">
    <inset android:insetLeft="0dp" android:insetTop="0dp" android:insetRight="0dp" android:insetBottom="0dp">
        <shape>
            <!-- 设置ProgressBar背景圆角半径 -->
            <corners android:radius="@dimen/dp_8" />
            <solid android:color="@color/color_6787D4" />
        </shape>
    </inset>
</item>

<!-- 设置ProgressBar进度条颜色 -->
<item android:id="@android:id/progress">
    <clip android:clipOrientation="horizontal">
        <inset android:insetLeft="4dp" android:insetTop="4dp" android:insetRight="4dp" android:insetBottom="4dp">
            <shape>
                <!-- 设置ProgressBar进度条圆角半径 -->
                <corners android:radius="@dimen/dp_8" />
                <solid android:color="@color/color_47D7FA" />
            </shape>
        </inset>
    </clip>
</item>
</layer-list>
