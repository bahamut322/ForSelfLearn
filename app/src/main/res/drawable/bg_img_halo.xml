<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <layer-list>
            <!--右上角-->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:centerX="1"
                        android:centerY="0"
                        android:endColor="#00241E9A"
                        android:gradientRadius="400dp"
                        android:startColor="#BF241E9A"
                        android:type="linear" />
                </shape>
            </item>
            <!--右下角-->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:centerX="1"
                        android:centerY="1"
                        android:endColor="#00241E9A"
                        android:gradientRadius="1000dp"
                        android:startColor="#BF241E9A"
                        android:type="radial" />
                </shape>
            </item>
            <!--左上角-->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:centerX="0"
                        android:centerY="0"
                        android:endColor="#0027147D"
                        android:gradientRadius="500dp"
                        android:startColor="#241E9A"
                        android:type="radial" />
                </shape>
            </item>
            <!--左下角-->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:centerX="0"
                        android:centerY="1"
                        android:endColor="#0027147D"
                        android:gradientRadius="@dimen/dp_600"
                        android:startColor="#241E9A"
                        android:type="radial" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>